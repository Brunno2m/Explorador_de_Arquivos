{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020", // Mantenha es2020 ou esnext
    "outDir": "./dist", // Mantenha outDir
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true // Opcional, mas útil para depuração
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}